{% extends 'base.html.twig' %}

{% block title %}New Location{% endblock %}

{% block content %}
    <h1>Create new Location</h1>

    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.latitude, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.longitude, {'attr': {'class': 'form-control'}}) }}
        <button class="btn btn-primary mt-3">Save</button>
    {{ form_end(form) }}

    <a href="{{ path('app_location_index') }}" class="btn btn-secondary mt-3">Back to list</a>
{% endblock %}
