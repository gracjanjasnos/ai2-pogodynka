{% extends 'base.html.twig' %}

{% block title %}Location Details{% endblock %}

{% block content %}
    <h1>Location Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ location.country }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-primary">Edit</a>

    {# UÅ¼ywamy poprawnej nazwy szablonu #}
    {{ include('location/_delete_form.html.twig', {'location': location}) }}
{% endblock %}
